# Home Server Environment Configuration
# Example configuration for typical home server deployment
TZ=Europe/Berlin
# Jellyfin Configuration
JELLYFIN_API_KEY=9b53498f4e1b4325a420fd705fea0020
JELLYFIN_BASE_URL=https://jellyfin.galagaon.com
DNS_TTL_SECONDS=0

# Typical home server paths (update for your setup)
# For local testing, use current directory
DATA_PATH=./data/docker-data
MOVIES_PATH=./data/movies
TV_PATH=./data/tv

# WLED Configuration (update for your device)
WLED_HOST=wled-ambilight-lgc1.lan
WLED_UDP_PORT=21324
DEVICE_MATCH_FIELD=DeviceName
WLED_DEVICE_LGSMARTTV=wled-ambilight-lgc1.lan
WLED_DEVICE_PIXEL6A=wled-ambilight-lgc1.lan
WLED_UDP_PROTOCOL=UDP_RAW
WLED_UDP_RAW_PORT=19446
WLED_LED_COUNT=300

# LED Configuration for typical TV setup
AMBILIGHT_DATA_DIR=/app/data/ambilight
AMBILIGHT_TOP_LED_COUNT=89
AMBILIGHT_BOTTOM_LED_COUNT=89
AMBILIGHT_LEFT_LED_COUNT=49
AMBILIGHT_RIGHT_LED_COUNT=49
AMBILIGHT_INPUT_POSITION=46
AMBILIGHT_RGBW=false # true for rgbw led strips (not tested)
AMBILIGHT_SYNC_LEAD_SECONDS=0.2
AMBILIGHT_SYNC_DRIFT_THRESHOLD=0.1    # Only adjust if drift > 0.1s
AMBILIGHT_SYNC_ADJUSTMENT_FACTOR=0.1

AMBILIGHT_SATURATION=0.9 # (default 1.0)
AMBILIGHT_GAMMA=2.5 # (default 2.2)
AMBILIGHT_BRIGHTNESS_TARGET=45 # (default 60.0)
AMBILIGHT_MIN_LED_BRIGHTNESS=12 # default 0
# AMBILIGHT_SMOOTH_SECONDS (default 0.12)
AMBILIGHT_ORDER=GRB # (e.g. RGB, GRB, BGR, ...)
# Gamma red	The gamma of red. 1.0 is neutral. Over 1.0 it reduces red, lower than 1.0 it adds red.
AMBILIGHT_GAMMA_RED=0.7
# Gamma green	The gamma of green. 1.0 is neutral. Over 1.0 it reduces green, lower than 1.0 it adds green.
AMBILIGHT_GAMMA_GREEN=0.8
# Gamma blue	The gamma of blue. 1.0 is neutral. Over 1.0 it reduces blue, lower than 1.0 it adds blue.
AMBILIGHT_GAMMA_BLUE=1.5

# Standard intervals
LIBRARY_SCAN_INTERVAL=1800
PLAYBACK_MONITOR_INTERVAL=0.5

# extraction
EXTRACTION_PRIORITY=newest_first
EXTRACTION_MAX_AGE_DAYS=100
EXTRACTION_BATCH_SIZE=5
# Extraction time window (HH:MM 24h). Supports crossing midnight (e.g., 22:00-06:00)
EXTRACTION_START_TIME=00:00
EXTRACTION_END_TIME=23:59
